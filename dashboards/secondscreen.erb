<script type='text/javascript'>
 $(function() {
   Dashing.gridsterLayout('[{"col":1,"row":1,"size_x":1,"size_y":3},{"col":2,"row":1,"size_x":1,"size_y":3},{"col":3,"row":1,"size_x":1,"size_y":3}]')
 });
 </script>

<script type='text/javascript'>
$(function() {
  // These settings override the defaults set in application.coffee. You can do this on a per dashboard basis.
  Dashing.widget_base_dimensions = [650, 650]
  Dashing.numColumns = 3
});
</script>


<% content_for :title do %>PhotoEditor SDK Dashboard<% end %>

<div class="gridster" style="display: flex; height: 100vh; justify-content: center; align-items: center;">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="chartmogul:intermedia_mrr_goal" data-view="Meter" data-moreinfo="Percentage of MRR" data-title="Intermediate MRR Goal" data-min="0" data-max="100" data-suffix='%'></div>
      <i class="fa icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="chartmogul:customers" data-view="Number" data-title="Customers" style="background-color:#96bf48;"></div>
      <i class="fa icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="chartmogul:next_mrr_goal" data-view="Meter" data-moreinfo="Percentage of MRR" data-title="Next MRR Goal" data-min="0" data-max="100" data-suffix='%'></div>
      <i class="fa icon-background"></i>
    </li>
  </ul>
</div>
